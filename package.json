{
  "name": "saarthi-jecrc-chatbot",
  "version": "1.0.0",
  "description": "Saarthi - Complete JECRC Chatbot System with Flask AI Service, Express Backend, and React Frontend",
  "private": true,
  "scripts": {
    "setup": "npm run setup:backend && npm run setup:frontend && npm run setup:chatbot",
    "setup:backend": "cd backend && npm install",
    "setup:frontend": "cd frontend && npm install",
    "setup:chatbot": "cd chatbot-service && chmod +x setup.sh && ./setup.sh",
    "dev": "concurrently \"npm run dev:chatbot\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:chatbot": "cd chatbot-service && ./run-service.sh",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    
    "chatbot:start": "cd chatbot-service && ./run-service.sh",
    "chatbot:setup": "cd chatbot-service && ./setup.sh",
    "start": "npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "clean": "npm run clean:backend && npm run clean:frontend && npm run clean:chatbot",
    "clean:backend": "cd backend && rm -rf dist node_modules",
    "clean:frontend": "cd frontend && rm -rf build node_modules",
    "clean:chatbot": "cd chatbot-service && rm -rf venv __pycache__",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npx eslint src --ext .ts,.tsx",
    "seed": "cd backend && npm run seed:all"
  },
  "keywords": [
    "saarthi",
    "jecrc",
    "chatbot",
    "multilingual",
    "hindi",
    "english",
    "rajasthani",
    "flask",
    "react",
    "nodejs",
    "gemini",
    "education"
  ],
  "author": "JECRC Foundation Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.8.0"
  }
}
